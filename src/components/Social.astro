---
const { platform, username } = Astro.props;
---

<a class="my-link" href={`https://www.${platform}.com/${username}`}
  >{platform}</a
>
<style>
  a {
    display: inline-block;
    padding: 0.5rem;
    background: #ffa7c4;
    color: black;
    text-decoration: none;
    transition: all 0.3s ease-in-out;
    font-family: monospace;
  }

  a:hover {
    background: #fff;
    color: #000000;
    box-shadow: 0 0 10px #000000;
    text-decoration: none;
  }
  a:visited {
    color: black;
  }
</style>
